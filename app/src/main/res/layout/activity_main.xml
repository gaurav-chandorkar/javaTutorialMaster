<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gaurav.javatutorial.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/youtube_card"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/youtube" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="Subscribe Our Channel" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="access out more video tutorial"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/ll_program_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="5dp">



                    <ImageView
                        android:id="@+id/img_program"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/program_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:text="Program"
                        android:layout_toRightOf="@+id/img_program"/>



                <TextView
                    android:id="@+id/tv_getstarted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get Started !!!"
                    android:textSize="30dp"
                    android:layout_below="@+id/img_program"
                    android:layout_toRightOf="@+id/img_program"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_program_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:weightSum="1"
                    android:layout_below="@+id/img_program"
                    android:layout_toRightOf="@+id/img_program"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_program_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total 30 program" />

                    <TextView
                        android:id="@+id/tv_program_attempted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You have attempted 0 " />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="last visited on" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:text=" 23 july" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


</LinearLayout>
